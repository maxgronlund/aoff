.breadcrumb aria-label="breadcrumbs"
  ul
    li
      = link gettext("Volunteer"), to: Routes.volunteer_volunteer_path(@conn, :index)
    li
      = link gettext("Categories"), to: Routes.volunteer_blog_path(@conn, :index)
    li.is-active
      |&nbsp;&nbsp;
      = @blog.title


.row
  .column
    h2 = @blog.title
  .column
    .float-right
      = link gettext("New Article"), to: Routes.volunteer_blog_blog_post_path(@conn, :new,  @blog), class: "button button-outline"

.row
  .column
    .auto-columns
      = raw @blog.description





.tiles.button-tiles
  = for post <- @blog.blog_posts do
    .card.is-shady
      .card-header
        .card-header-title.is-centered
          = post.title
      .card-image
        img.modal-button alt=("#{post.title}") src="#{AOFF.Uploader.Image.url({post.image, post}, :thumb)}"


      .card-content

        .float-right
          = link gettext("Edit"), to: Routes.volunteer_blog_blog_post_path(@conn, :edit, @blog, post), class: "button button-small"
          | &nbsp;
          = link gettext("Delete"),\
            to: Routes.volunteer_blog_blog_post_path(@conn, :delete, @blog, post),\
            method: :delete,\
            data: [confirm: "Are you sure?"],\
            class: "button button-red button-small"
        br

        p = post.teaser
      .card-footer.is-button
        = link gettext("Show"), to: Routes.volunteer_blog_blog_post_path(@conn, :show, @blog, post), class: "card-footer-item is-button"


        /= link gettext("Show"), to: Routes.volunteer_blog_blog_post_path(@conn, :show, @blog, post), class: "button float-right"


