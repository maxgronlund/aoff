.breadcrumb aria-label="breadcrumbs"
  ul
    li
      = link gettext("Volunteer"), to: Routes.volunteer_volunteer_path(@conn, :index)
    li.is-active
      |&nbsp;&nbsp;
      = gettext("Categories")

.row
  .column
    h2= gettext("Categories")
  .column
    = link gettext("New Category"), to: Routes.volunteer_blog_path(@conn, :new), class: "button float-right"

