.row.mt-1
  .column
    = for blog <- @blogs do
      .alert.alert-box
        .row
          .column
            h3 = blog.title
          .column
            .float-right
              = link gettext("Show"),\
                to: Routes.volunteer_blog_path(@conn, :show, blog),\
                class: "button button-outline"
              | &nbsp;
              = link gettext("Edit"),\
                to: Routes.volunteer_blog_path(@conn, :edit, blog),\
                class: "button"

              | &nbsp;
              = link gettext("Delete"),\
                to: Routes.volunteer_blog_path(@conn, :delete, blog),\
                method: :delete,\
                data: [confirm: gettext("Are you sure? All articles in this categotry will be gone.")],\
                class: "button button-red"