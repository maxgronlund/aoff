.row
  .column
    .breadcrumb aria-label="breadcrumbs"
      ul
        li
          = link gettext("Volunteer"), to: Routes.volunteer_volunteer_path(@conn, :index)
        li
          = link gettext("Messages"), to: Routes.volunteer_message_path(@conn, :index)
        li.is-active
          | &nbsp;
          = @message.title



.row
  .column
    h2 = @message.title
    = raw @message.text

    = link gettext("Edit"),\
      to: Routes.volunteer_message_path(@conn, :edit, @message),\
      class: "button"

  .column
    = gettext("Identifier: %{identifier}", identifier: @message.identifier)
    br
    = if @message.show do
      = gettext("Show on page: Yes")
    - else
      = gettext("Show on page: No")
    br
    = gettext("Locale: %{locale}", locale: @message.locale)



