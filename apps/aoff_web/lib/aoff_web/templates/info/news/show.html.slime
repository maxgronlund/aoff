.breadcrumb aria-label="breadcrumbs"
  ul
    li
      = link @blog.title, to: Routes.news_path(@conn, :index)
    li.is-active
      | &nbsp;
      = @post.title



.row
  .column
    = @post.author <> " - " <> date(@post.date)

    h2= @post.title
  .column

    = img_tag AOFF.Uploader.Image.url({@post.image, @post}, :original)
    .image-caption
      = @post.caption
.row
  .column
    = raw(@post.text)



= if @volunteer do
  .column
    = link gettext("Edit"),\
      to: Routes.volunteer_blog_blog_post_path(@conn, :edit, @blog, @post),\
      class: "button float-right"
  / = if @volunteer do
  /   = link gettext("Delete"),\
  /     to: Routes.info_news_path(@conn, :delete, @news, post),\
  /     method: :delete,\
  /     data: [confirm: gettext("Are you sure?")],\
  /     class: "button button-red button-outline"
  /   | &nbsp;
  /   = link gettext("Edit"),\
  /     to: Routes.info_news_path(@conn, :edit, @news, post),\
  /     class: "button button-outline"
  /   | &nbsp;