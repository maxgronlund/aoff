.row.mt-1
  .column
    = for order <- @orders do
      = if closed?(order.state) do
        = link  to: Routes.user_order_path(@conn, :show, @user, order) do
          .alert.alert-box
            h3 = "\# #{order.order_nr}"
            .row
              .column

                = AOFF.Time.date_as_string(order.payment_date)
              .column
                .float-right
                  b = order.total